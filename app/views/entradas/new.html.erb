<h1>New entrada</h1>



<%= form_for([@proyecto, @proyecto.entradas.new]) do |f| %>


  <% personas = Persona.find(:all, :order => :nombre) %>
<p>Persona: 
  <%= f.collection_select :persona_id, personas, :id, :nombre%>
</p>
  
  <% entradas_tipos = TipoEntrada.find(:all, :order => :nombre) %>
<p>Tipo de entrada: 
  <%= f.collection_select :tipo_entrada_id, entradas_tipos, :id, :nombre%>
</p>
  
   <div class="field">
    <%= f.label :fecha_creacion %><br>
    <%= f.date_field :fecha_creacion%>
  </div>

  <div class="field">
    <%= f.label :comentario %><br>
    <%= f.text_area :comentario %>
  </div>
  
  <div class="field">
    <%= f.label :tiempo %><br>
    <%= f.number_field :tiempo%>
  </div>
  
  <div class="actions">
    <%= f.submit 'Add'%>
  </div>
<% end %>

