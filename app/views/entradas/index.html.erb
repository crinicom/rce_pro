<h1>Listing entradas</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <% proyectos = Proyecto.all %>
  <% personas = Persona.all %>
  <% t_entrada = TipoEntrada.all %>
	
  <tbody>
    <% @entradas.each do |entrada| %>
      <tr>
		<td><%= proyectos.find(entrada.proyecto_id).nombre %></td>
		<td><%= entrada.fecha_creacion %></td>
		<td><%= personas.find(entrada.persona_id).nombre %></td>
		<td><%= t_entrada.find(entrada.tipo_entrada_id).nombre %></td>
		<td><%= entrada.comentario %></td>
		<td><%= entrada.tiempo %></td>
        <td><%= link_to 'Show', [entrada.proyecto, entrada ]%></td>
        <td><%= link_to 'Edit', edit_proyecto_entrada_path(entrada.proyecto, entrada) %></td>
        <td><%= link_to 'Destroy', [entrada.proyecto, entrada], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

